<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="2dp"
    android:background="@android:color/white"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    >

    <TextView
        android:id="@+id/text_view_pending_activity_name"
        android:textSize="16.6sp"
        android:layout_margin="2dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/approvesign2"
        android:id="@+id/approvesign"
        android:layout_toLeftOf="@+id/rejectsignimgbtn"
        android:layout_centerInParent="true"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rejectsign"
        android:id="@+id/rejectsignimgbtn"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_pending_activity_name"
        android:id="@+id/text_view_pending_created_by"
        />

    <TextView
        android:id="@+id/text_view_pending_edit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_pending_created_by"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/light_black"
        android:textSize="12sp" />

</RelativeLayout>
